<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="group_pep_user" model="res.groups">
            <field name="name">PEP Checker / User</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_pep_manager" model="res.groups">
            <field name="name">PEP Checker / Manager</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('group_pep_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Record Rules -->
        <record id="rule_pep_person_user" model="ir.rule">
            <field name="name">PEP Person: User Access</field>
            <field name="model_id" ref="model_pep_person"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pep_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_pep_person_manager" model="ir.rule">
            <field name="name">PEP Person: Manager Access</field>
            <field name="model_id" ref="model_pep_person"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pep_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_pep_screening_user" model="ir.rule">
            <field name="name">PEP Screening: User Access</field>
            <field name="model_id" ref="model_pep_screening"/>
            <field name="domain_force">[('screened_by', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_pep_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_pep_screening_manager" model="ir.rule">
            <field name="name">PEP Screening: Manager Access</field>
            <field name="model_id" ref="model_pep_screening"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pep_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>